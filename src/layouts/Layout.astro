---
import BaseHead from "../components/BaseHead.astro";
import SiteHeader from "../components/Header.astro";
import SiteFooter from "../components/Footer.astro";
import SkipToLink from "../components/SkipToLink.astro";
import MobileMenu from "../components/MenuMobile.astro";
import type { Props as BaseHeadProps } from "../components/BaseHead.astro";
import "../styles/style.scss";

export interface Props {
    seo?: BaseHeadProps;
}

const { seo } = Astro.props;
---

<html lang="en" color-mode="light">
    <BaseHead {...seo} />
    <body>
        <SkipToLink />
        <MobileMenu triggerId="mobile-menu-trigger" title="Mobile Menu" />
        <SiteHeader />
        <main class="content" id="main">
            <slot />
        </main>
        <SiteFooter />
    </body>
</html>
