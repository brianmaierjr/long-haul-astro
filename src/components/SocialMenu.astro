---
import { settings, social } from "../data/settings";
import { Icon } from "astro-icon";
---

<ul class="noList social">
    {
        social.map((item) => (
            <>
                <li>
                    <a class="social__link" href={item.url} target="_blank">
                        <span class="sr-only">
                            {settings.title} on {item.name}
                        </span>
                        <Icon class="social__icon" name={item.icon} />
                    </a>
                </li>
            </>
        ))
    }
</ul>

<style lang="scss">
    .social {
        text-align: center;
        margin: 0;
        padding: 0;

        li {
            display: inline-block;
            margin-right: 8px;

            &:last-child {
                margin-right: 0;
            }

            a {
                display: inline-block;
                width: 2em;
                height: 2em;
                transition: all 0.2s ease-in-out;
                padding: 0.5em;
                background-color: var(--primary-color);
                border-radius: 50%;

                svg {
                    display: block;
                    width: 100%;
                    height: 100%;
                    color: var(--white);

                    .outer-shape {
                        fill: var(--primary-color);
                    }

                    .inner-shape {
                        fill: white;
                    }
                }
            }

            &:hover,
            &:focus {
                a {
                    text-decoration: underline;
                }
            }
        }
    }
</style>
